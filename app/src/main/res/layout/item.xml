<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="Load Type"
            android:textColor="#0000AA"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loadtypevalue1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"
            android:text="Mango"
            android:textColor="@color/black"
            android:textSize="20sp" />


</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Loading point"
                android:textColor="#0000AA"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loadingpointvalue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="Nunna"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Unloading point"
                android:textColor="#0000AA"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/unloadingpointvalue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="Hyderabad"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Freight     "
                android:textColor="#0000AA"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/freightvalue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="250000"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="No.of Tons"
                android:textColor="#0000AA"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tonsvalue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="35"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="Advance amt"
                android:textColor="#0000AA"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/advancevalue1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:paddingBottom="5dp"
                android:text="50000"
                android:textColor="#0000AA"
                android:textSize="20sp" />

        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:minHeight="48dp"
                android:text="FIX"
                android:id="@+id/fix"
                android:textSize="15dp"
                android:layout_marginBottom="5dp">
            </Button>

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:minHeight="48dp"
                android:text="Call"
                android:id="@+id/call"
                android:textSize="15dp"
                android:layout_marginBottom="5dp">
            </Button>


        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>